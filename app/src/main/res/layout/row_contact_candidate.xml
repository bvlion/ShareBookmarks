<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/row_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/space_very_small"
  card:cardCornerRadius="2dp"
  card:cardElevation="0dp">

    <LinearLayout
      android:id="@+id/user_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:padding="@dimen/space_small"
      android:background="?android:selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:orientation="vertical">

      <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/share_name_size"
        tools:text="もちもち" />

      <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space_extra_small"
        android:textSize="@dimen/share_email_size"
        tools:text="test@example.com" />

    </LinearLayout>

</androidx.cardview.widget.CardView>