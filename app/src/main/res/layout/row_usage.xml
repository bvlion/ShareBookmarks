<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/row_card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardBackgroundColor="@color/items_background"
  card:cardElevation="0dp">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_small"
    card:cardCornerRadius="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/usage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_normal"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal"
        android:textSize="@dimen/usage_title_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="使い方" />

      <ImageView
        android:id="@+id/usage_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:paddingTop="@dimen/space_normal"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal"
        app:srcCompat="@drawable/ic_how_to_use_1" />

      <TextView
        android:id="@+id/usage_text"
        android:padding="@dimen/space_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="使い方" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>