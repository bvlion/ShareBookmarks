<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_normal">

        <TextView
          android:id="@+id/others_detail_message"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/other_menu_terms_of_use"
          android:textSize="@dimen/info_message_size"
          android:visibility="gone" />
      </LinearLayout>
    </ScrollView>

    <ProgressBar
      android:id="@+id/loading"
      style="?android:attr/progressBarStyleLargeInverse"
      android:layout_width="@dimen/loading_progress"
      android:layout_height="@dimen/loading_progress"
      android:gravity="center"
      app:layout_anchor="@+id/scroll"
      app:layout_anchorGravity="center" />

    <TextView
      android:id="@+id/error_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/communication_error"
      android:gravity="center"
      app:layout_anchor="@+id/scroll"
      app:layout_anchorGravity="center"
      android:visibility="gone" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>